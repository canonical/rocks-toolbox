{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "prHourlyLimit": 0,
  "ignorePaths": [
    ".github/*"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^rockcraft_rock/rockcraft.yaml$"
      ],
      "matchStrings": [
        "rockcraft$\s+source-tag:\s+(?<currentValue>.*?)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "canonical/rockcraft"
    }
  ]
}
